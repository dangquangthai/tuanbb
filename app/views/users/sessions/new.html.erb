<div class="text-lg my-6">Log in</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render Shared::InputComponent.new(attribute_name: :email, form: f, resource: resource, type: :email) %>
  <%= render Shared::InputComponent.new(attribute_name: :password, form: f, resource: resource, type: :password) %>

  <% if devise_mapping.rememberable? %>
    <%= render Shared::InputComponent.new(attribute_name: :remember_me, form: f, resource: resource, type: :checkbox) %>
  <% end %>

  <div class="mt-6">
    <%= render Shared::ButtonComponent.new(text: 'Login', type: :submit) %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
