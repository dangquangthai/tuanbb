<!DOCTYPE html>
<html>
  <head>
    <title>Tuanbb</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "https://unpkg.com/trix@2.0.4/dist/trix.css" %>
    <%= javascript_include_tag 'helpers' %>
    <%= javascript_importmap_tags %>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,700|Roboto:300,400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>

  <body class="antialiased">
    <main class="container mx-auto">
      <%= render 'layouts/header' %>
      <%= yield %>
      
      <% footer = Article.find_by(slug: 'footer') %>
      <% if footer.present? && footer.content.body.present? %>
        <hr class="mt-12">
        <div class="sm:px-0 py-4 px-4 bg-gray-50">
          <%== footer.content.body %>
        </div>
      <% else %>
        <div class="mt-12"></div>
      <% end %>
    </main>
    <%= render 'layouts/google_analytics' %>
    <%= render 'layouts/facebook_chatbox' %>
    <div id="modal" class="hidden"></div>
    <div id="events" class="hidden"></div>
  </body>
</html>
