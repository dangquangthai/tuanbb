<!DOCTYPE html>
<html>
  <head>
    <title>Tuanbb</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "https://unpkg.com/trix@2.0.4/dist/trix.css" %>
    <%= javascript_include_tag 'helpers' %>
    <%= javascript_importmap_tags %>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,700|Roboto:300,400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>

  <body class="antialiased">
    <div id="will-redirect" class="hidden"></div>
    <main class="container mx-auto">
      <%= render 'layouts/admin_menu' %>
      <div id="notifications">
        <%= render Shared::NotificationComponent.new(flash: flash) %>
      </div>
      <%= yield %>
      <div class="mb-40"></div>
    </main>
    <div id="modal" class="hidden"></div>
    <div id="events" class="hidden"></div>
  </body>
</html>
