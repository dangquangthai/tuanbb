<% if flash.key?(:notice) %>
  <% if admin_articles_page? %>
    <%== redirect_tag admin_articles_path %>
  <% elsif admin_trending_page? %>
    <%== redirect_tag trending_admin_home_index_path %>
  <% else %>
    <%== redirect_tag admin_home_index_path %>
  <% end %>
<% else %>
  <%= render Admin::ArticleFormComponent.new(article: @article, save_url: admin_articles_path) %>
<% end %>
