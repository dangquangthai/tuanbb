upstream puma {
  server unix:///home/ubuntu/apps/tuanbb/shared/tmp/sockets/tuanbb-puma.sock;
}

server {
  listen 80;
  return 301 https://$server_name$request_uri;
}

server {
  listen 443 ssl;
  listen [::]:443 ssl;

  include /etc/nginx/snippets/self-signed.conf;
  include /etc/nginx/snippets/ssl-params.conf;
  
  root /home/ubuntu/apps/tuanbb/current/public;
  access_log /home/ubuntu/apps/tuanbb/current/log/nginx.access.log;
  error_log /home/ubuntu/apps/tuanbb/current/log/nginx.error.log info;

  server_name 139.180.190.150 tuanblackberry.com www.tuanblackberry.com;

  location ~* ^assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  try_files $uri/index.html $uri @puma;

  location @puma {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-Proto https;
    proxy_redirect off;
    proxy_pass http://puma;
  }

  error_page 500 502 503 504 /500.html;
  client_max_body_size 4G;
  keepalive_timeout 70;
}
